_Views/Proyecto/Edit.cshtml
@model Caso2.Models.Proyecto

@{
    ViewData["Title"] = "Editar Proyecto";
}

<h1>Editar Proyecto</h1>

<h4>Proyecto</h4>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ProyectoId)

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre)
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nombre)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Estado)
        @Html.TextBoxFor(model => model.Estado, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Estado)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DescripcionObjetivos)
        @Html.TextAreaFor(model => model.DescripcionObjetivos, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.DescripcionObjetivos)
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
}
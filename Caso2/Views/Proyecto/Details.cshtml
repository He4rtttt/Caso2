_Views/Proyecto/Details.cshtml

@model Caso2.Models.Proyecto

@{
    ViewData["Title"] = "Detalles de Proyecto";
}

<h1>Detalles de Proyecto</h1>

<div>
    <h4>Proyecto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Nombre</dt>
        <dd>@Model.Nombre</dd>
        <dt>Estado</dt>
        <dd>@Model.Estado</dd>
        <dt>Descripción de Objetivos</dt>
        <dd>@Model.DescripcionObjetivos</dd>
    </dl>
    <a href="@Url.Action("Edit", "Proyecto", new { id = Model.ProyectoId })" class="btn btn-warning">Editar</a>
    <a href="@Url.Action("Index", "Proyecto")" class="btn btn-secondary">Volver</a>
</div>
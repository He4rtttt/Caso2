_Views/Proyecto/Delete.cshtml

@model Caso2.Models.Proyecto

@{
    ViewData["Title"] = "Eliminar Proyecto";
}

<h1>Eliminar Proyecto</h1>

<h4>Proyecto</h4>
<hr />

<div>
    <h5>¿Estás seguro de que deseas eliminar este proyecto?</h5>
    <dl class="dl-horizontal">
        <dt>Nombre</dt>
        <dd>@Model.Nombre</dd>
        <dt>Estado</dt>
        <dd>@Model.Estado</dd>
        <dt>Descripción de Objetivos</dt>
        <dd>@Model.DescripcionObjetivos</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("Index", "Proyecto")" class="btn btn-secondary">Cancelar</a>
    }
</div>